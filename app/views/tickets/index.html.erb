<h1>Tickes#index</h1>

<table>
  <thead>
    <tr>
      <th>PLAYBALL</th>
      <th>対戦</th>
      <th>枚数</th>
      <th>価格</th>
      <th>投稿者</th>
      <th>掲載期間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.playball.strftime("%m月%d日 %H:%M") %> at <%= ticket.ballpark.name %></td>
        <td><%= ticket.home.name %> vs <%= ticket.visitor.name %></td>
        <td><%= ticket.number %>枚</td>
        <td><%= ticket.price %>円/枚</td>
        <td><%= ticket.user.profile.nick_name %></td>
        <td><%= <%= ticket.post_end_at.strftime("%Y年%m月%d日 %H時%M分")まで %></td>
        <td><%= link_to 'Show', ticket %></td>

        <% if ticket.user == current_user %>
          <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
          <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
