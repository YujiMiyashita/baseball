<%= form_for(@seat) do |f| %>
<div class="col-xs-10 col-xs-offset-1 col-md-5 col-md-offset-3">
  <div class="col-xs-8">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="col-xs-8">
    <%= f.label :price %>
    <%= f.number_field :price , class: 'form-control' %>
  </div>

  <div class="col-xs-8">
  <%= f.label :ballpark_id %>
  <%= f.collection_select :ballpark_id, Ballpark.where(status: true), :id, :name, {}, { class: "form-control" } %>
  </div>

  <div class="col-xs-8">
    <%= f.submit 'チケットを仮登録する', class: 'btn btn-success' %>
  </div>
</div>

<% end %>
