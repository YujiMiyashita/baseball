<h1>座席一覧</h1>

<div class="col-xs-10 col-xs-offset-1">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>座席名</th>
        <th>価格</th>
        <th>球場</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @seats.each do |seat| %>
        <tr>
          <td><%= seat.name %></td>
          <td>¥<%= seat.price %></td>
          <td><%= seat.ballpark.name %></td>
          <td><%= link_to '詳細', seat, class: 'btn btn-default' %></td>
          <td><%= link_to '編集', edit_seat_path(seat), class: 'btn btn-info' %></td>
          <td><%= link_to '削除', seat, method: :delete, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-xs-10 col-xs-offset-1">
  <%= link_to '座席登録', new_seat_path, class: 'btn btn-info' %>
</div>
