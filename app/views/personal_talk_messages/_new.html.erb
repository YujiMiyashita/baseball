
<%= form_for(@message, url: personal_talk_personal_talk_messages_path(@message.personal_talk)) do |f| %>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="hidden">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :personal_talk_id, value: @message.personal_talk_id %>
  </div>

  <div class="action">
    <%= f.submit 'メッセージを送信する', class: 'btn btn-success' %>
  </div>

<% end %>
