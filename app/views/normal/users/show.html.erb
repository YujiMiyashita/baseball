<h2><%= @user.profile.nick_name %>　<%= profile_img(@user.profile) %></h2>

<% if @user.profile.present? %>
  <p>好きな球団：<%= @user.profile.team.try(:name) %></p>
  <p>好きな選手：<%= @user.profile.player.try(:name) %></p>
  <p>よく行く球場：<%= @user.profile.ballpark.try(:name) %></p>
  <p><%= simple_format(@user.profile.content) %></p>
<% else %>
  <p>プロフィールがまだ登録されていません</p>
<% end %>

<% if @user == current_user %>
  <%= link_to 'プロフィール編集', edit_normal_profile_path, class: 'btn btn-success' %>
  <%= render 'normal/users/notification_index', notifications: @notifications %>
  <%= render 'normal/group_talks/index', group_talks: @group_talks %>
<% elsif @user != current_user %>
  <%= render 'normal/favorites/form', user: @user %>
<% end %>
