<%= form_for([:normal, @profile], url: normal_profile_path)  do |f| %>

  <div class="field">
    <%= f.label :nick_name %>
    <%= f.text_field :nick_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="team_select">
    <%= f.label :team_id %>
    <%= f.collection_select :team_id, Team.where(status: true), :id, :name, {}, { class: "form-control" } %>
  </div>

  <div class="player_select">
   <%= render partial: 'player_select', locals: { team_id: @profile.team || Team.first.id } %>
  </div>

  <div class="field">
    <%= f.label :ballpark_id %>
    <%= f.collection_select :ballpark_id, Ballpark.where(status: true), :id, :name, {}, { class: "form-control" } %>
  </div>

  <div class="field">
    <%= f.label :image_url %><br>
    <%= profile_img(@profile) if profile_img(@profile) %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <div class="action">
    <%= f.submit '登録する', class: 'btn btn-success' %>
  </div>

<% end %>
