<% unless blog.user == current_user %>
  <% if current_user.favorites.find_by(blog_id: blog.id).present? %>
    <%= link_to normal_blog_favorite_path(blog, current_user.favorites.find_by(blog_id: blog.id).id), method: :delete do %>
      <i class="fa fa-star fa-3x"></i>
    <% end %>
  <% else %>
    <%= link_to normal_blog_favorites_path(blog), method: :post do %>
      <i class="fa fa-star-o fa-3x"></i>
    <% end %>
  <% end %>
<% end %>
