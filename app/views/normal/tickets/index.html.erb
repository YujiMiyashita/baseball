<h2>チケット一覧</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>PLAYBALL</th>
      <th>対戦</th>
      <th>枚数</th>
      <th>投稿者</th>
      <th>掲載期間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.playball.strftime("%m月%d日 %H:%M") %><br>
            <%= ticket.ballpark.name %></td>
        <td><%= ticket.home.name %><br>
             vs <%= ticket.visitor.name %></td>
        <td><%= ticket.number %>枚</td>
        <td><%= link_to ticket.user.profile.nick_name, normal_user_path(ticket.user) %><br>
            <%= profile_img(ticket.user.profile) %></td>
        <td><%= ticket.post_end_at.strftime("%Y年%m月%d日") %>まで</td>
        <td><%= link_to '詳細', normal_ticket_path(ticket), class: 'btn btn-default' %></td>
        <td><%= render 'normal/offers/form', { ticket: ticket } unless current_user == ticket.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規チケット', new_normal_ticket_path, class: 'btn btn-info' %> |
<%= link_to '下書き一覧', draft_index_normal_tickets_path, class: 'btn btn-default' %>
