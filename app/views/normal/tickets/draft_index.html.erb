<h2 class="page-header">下書きチケット一覧</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>PLAYBALL</th>
      <th>球場</th>
      <th>主催</th>
      <th>対戦</th>
      <th>枚数</th>
      <th>投稿者</th>
      <th>掲載終了</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.playball.strftime("%m月%d日 %H:%M") %></td>
        <td><%= ticket.ballpark.name %></td>
        <td><%= ticket.home.name %></td>
        <td><%= ticket.visitor.name %></td>
        <td><%= ticket.number %>枚</td>
        <td><%= link_to normal_user_path(ticket.user) do %>
              <%= profile_img(ticket.user.profile) %>
            <% end %></td>
        <td><%= ticket.post_end_at.strftime("%m月%d日") %></td>
        <td><%= link_to draft_normal_ticket_path(ticket) do %>
              <i class="fa fa-book fa-lg"></i>
            <% end %></td>
        <td><%= ticket_status(ticket) unless current_user == ticket.user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_normal_ticket_path do %>
  <i class="fa fa-search fa-lg"></i>登録する
<% end %>

<%= link_to draft_index_normal_tickets_path do %>
  <i class="fa fa-book fa-lg"></i>下書き一覧
<% end %>
