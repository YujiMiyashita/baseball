<h2 class="page-header">観戦日記</h2>

<p><%= link_to 'ブログ新規投稿', new_normal_blog_path, class: 'btn btn-default' %></p>

<ul class="media-list">
  <% @blogs.each do |blog| %>
    <div class="col-xs-12 col-md-6">
      <li class="media">
    		<a class="media-left" href="#">
    			<%= image_tag(blog.user.profile.image_url, size: "80x80") %>
    		</a>
    		<div class="media-body">
    			<h4 class="media-heading"><%= link_to blog.title, normal_blog_path(blog) %></h4>
    			<p><%= blog.created_at.strftime("%Y/%m/%d") %> Written by <%= link_to blog.user.profile.nick_name, normal_user_path(blog.user) %></p>
          <%= render 'normal/favorites/form', { blog: blog, favorite: @favorite } %>
    		</div>
    	</li>
    </div>
	<% end %>
</ul>
