<%= form_for(@message, url: group_talk_group_talk_messages_path(@message.group_talk)) do |f| %>

  <div class="field">
    <%= f.text_area :content, class: 'form-control' %>
  </div>

  <div class="hidden">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :group_talk_id, value: @message.group_talk_id %>
  </div>

  <div class="action">
    <%= f.submit 'メッセージを送信する', class: 'btn btn-success' %>
  </div>

<% end %>
